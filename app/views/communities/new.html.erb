<div class='chat-room-form'>
  <h1>新規コミュニティ作成</h1>
  <%=form_with model: @community, local: true do |f|%>

    <%# コミュニティアイコン画像 %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
         <div class='chat-room-form__label'>コミュニティ画像</div>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.file_field :image, class: 'chat__room_name chat-room-form__input' %>
      </div>
    </div>

    <%# コミュニティ入力欄 %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :コミュニティ名, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'コミュニティ名を入力してください'%>
      </div>
    </div>

    <%# カテゴリー入力欄 %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <label class='chat-room-form__label' for='chat_room_チャットメンバー'>カテゴリー</label>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :category, class: 'chat__room_name chat-room-form__input', placeholder: 'カテゴリーを入力してください'%>
      </div>
    </div>

    <%# プロフィール入力欄 %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <label class='chat-room-form__label' for='chat_room_チャットメンバー'>コミュニティ説明</label>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_area :profile, class: 'chat__room_name chat-room-form__input', placeholder: 'プロフィールを入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
    <%# 作成者のユーザーIDをコントローラーに渡す %>
    <input name="community[user_ids][]" type="hidden" value=<%= current_user.id %>>
  <% end %>
</div>
