<%# コミュニティの概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @community.name %>
    </h2>
    <div class='item-img-content'>
      <%# <%= image_tag @community.image ,class:"item-box-img" %> %>
    </div>

    <div class="item-explain-box">
      <span><%= @community.category %></span>
    </div>

    <div class="item-explain-box">
      <span><%= @community.profile %></span>
    </div>
  </div>
  <div class="request-box">
    <%= link_to 'コミュニティの編集', '#', method: :get, class: "item-red-btn" %>
    <%= link_to '削除', '#', method: :delete, class:'item-destroy' %>

    <%= link_to '所属する', community_requests_path(@community.id), method: :post, class:'community-request' %>
  </div>
</div>
